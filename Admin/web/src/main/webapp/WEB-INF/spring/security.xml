<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:s="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	
    <s:http pattern="/images/**" security="none" />
    <s:http pattern="/styles/**" security="none" />
    <s:http pattern="/css/**" security="none" />
    <s:http pattern="/zkau/**" security="none" />
    <s:http pattern="/login.zul" security="none" />
    <s:http pattern="/rest/**" security="none" />
	
	
    <s:http auto-config='true'>
        <s:intercept-url pattern="/**" access="ROLE_USER" />
        <s:form-login login-page="/login.zul" always-use-default-target="true" default-target-url="/index.zul" />
        <s:logout logout-success-url="/login.zul" />
    </s:http>
	


    <bean id="shaPasswordEncoder" class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
        <constructor-arg value="512" />
    </bean>

    <s:authentication-manager>
        <s:authentication-provider user-service-ref='seguridadService'>
            <s:password-encoder ref="shaPasswordEncoder" />
        </s:authentication-provider>
    </s:authentication-manager>



</beans>
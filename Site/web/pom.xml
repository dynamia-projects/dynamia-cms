<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>tools.dynamia.cms.site.parent</artifactId>
		<groupId>tools.dynamia.cms</groupId>
		<version>2.0.0.Beta</version>
	</parent>
	<groupId>tools.dynamia.cms</groupId>
	<artifactId>tools.dynamia.cms.site.web</artifactId>
	<packaging>war</packaging>
	<version>2.0.0.Beta</version>
	<name>DynamiaCMS Site - Web (${project.version})</name>
	<url>http://www.dynamiasoluciones.com</url>

	<dependencies>

		<!-- Modules -->
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.core</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.templates</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.pages</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.menus</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.products</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.users</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.shoppingcart</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.mail</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.payment.payulatam</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.payment.paypal</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>
		<dependency>
			<groupId>tools.dynamia.cms</groupId>
			<artifactId>tools.dynamia.cms.site.banners</artifactId>
			<version>2.0.0.Beta</version>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.7.7</version>
		</dependency>

	</dependencies>


	<build>
		<finalName>cms-site</finalName>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>


			<!-- Jetty Configuration -->
			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>9.3.7.v20160115</version>


				<configuration>

					<jettyConfig>conf/jetty.xml</jettyConfig>
					<!--Disable auto scen -->
					<scanIntervalSeconds>0</scanIntervalSeconds>
					<webApp>
						<contextPath>/</contextPath>
					</webApp>

					<stopPort>9001</stopPort>
					<stopKey>jetty-stop</stopKey>

					<httpConnector>
						<port>8080</port>
					</httpConnector>


				</configuration>

				<dependencies>
					<!-- JDBC Drivers -->
					<dependency>
						<groupId>org.mariadb.jdbc</groupId>
						<artifactId>mariadb-java-client</artifactId>
						<version>1.5.4</version>
					</dependency>

					<dependency>
						<groupId>hsqldb</groupId>
						<artifactId>hsqldb</artifactId>
						<version>1.8.0.10</version>
					</dependency>

					<!-- JavaMail -->
					<dependency>
						<groupId>javax.mail</groupId>
						<artifactId>mail</artifactId>
						<version>1.4.2</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.3</version>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
		</plugins>

	</build>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
</project>

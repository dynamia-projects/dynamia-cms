<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">



<Configure id="Server" class="org.eclipse.jetty.server.Server">

	<Array id="plusConfig" type="java.lang.String">
		<Item>org.eclipse.jetty.webapp.WebInfConfiguration</Item>
		<Item>org.eclipse.jetty.webapp.WebXmlConfiguration</Item>
		<Item>org.eclipse.jetty.webapp.MetaInfConfiguration</Item>
		<Item>org.eclipse.jetty.webapp.FragmentConfiguration</Item>
		<Item>org.eclipse.jetty.plus.webapp.EnvConfiguration</Item> <!-- add -->
		<Item>org.eclipse.jetty.plus.webapp.PlusConfiguration</Item>    <!-- add -->
		<Item>org.eclipse.jetty.webapp.JettyWebXmlConfiguration</Item>
		<Item>org.eclipse.jetty.webapp.TagLibConfiguration</Item>
	</Array>

	<!-- JDBC Resource -->
	<New id="DSTest" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg></Arg>
		<Arg>jdbc/DataSource</Arg>
		<Arg>
			<New class="org.mariadb.jdbc.MariaDbDataSource">
				<Set name="url">jdbc:mariadb://localhost:3306/compulagoweb</Set>
				<Set name="user">root</Set>
				<Set name="password">123</Set>		
			</New>
		</Arg>
	</New>

	<New class="org.eclipse.jetty.plus.jndi.EnvEntry">
		<Arg></Arg>
		<Arg>hibernateDialect</Arg>
		<Arg type="java.lang.String">org.hibernate.dialect.MySQL5InnoDBDialect</Arg>
		<Arg type="boolean">true</Arg>
	</New>

	<New class="org.eclipse.jetty.plus.jndi.EnvEntry">
		<Arg></Arg>
		<Arg>hibernateShowSQL</Arg>
		<Arg type="java.lang.Boolean">true</Arg>
		<Arg type="boolean">true</Arg>
	</New>

	<New class="org.eclipse.jetty.plus.jndi.EnvEntry">
		<Arg></Arg>
		<Arg>hibernateGenerateDDL</Arg>
		<Arg type="java.lang.Boolean">true</Arg>
		<Arg type="boolean">true</Arg>
	</New>


	
</Configure>
